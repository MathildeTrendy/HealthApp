<div style="max-width: 600px; margin: 60px auto; font-family: Arial, sans-serif;">
    <h2 style="text-align: center; margin-bottom: 30px;">✉️ Send en besked</h2>

    <form method="POST" action="/messages/send" style="background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 1px 4px rgba(0,0,0,0.1);">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <label for="receiver" style="display: block; margin-bottom: 6px;">Vælg modtager:</label>
        <select name="receiver_id" required style="width: 100%; padding: 8px; margin-bottom: 15px;">
            <% receivers.forEach(r => { %>
                <option value="<%= r.id %>"><%= r.email %></option>
            <% }) %>
        </select>

        <label for="message" style="display: block; margin-bottom: 6px;">Besked:</label>
        <textarea name="message" rows="5" required style="width: 100%; padding: 10px; border-radius: 6px; border: 1px solid #ccc;"></textarea>

        <button type="submit" style="margin-top: 15px; background-color: #28a745; color: white; padding: 10px 16px; border: none; border-radius: 4px;">Send</button>
    </form>

    <div style="text-align: center; margin-top: 15px;">
        <a href="/" style="color: #007BFF;">⬅️ Tilbage</a>
    </div>
</div>
